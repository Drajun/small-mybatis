<?xml version="1.0" encoding="UTF-8" ?>
<!--<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">-->
<mapper namespace="cn.drajun.mybatis.test.dao.IUserDao">
    <select id="queryUserInfoById" parameterType="java.lang.Long" resultType="cn.drajun.mybatis.test.po.User">
        SELECT id, userId, userHead, createTime, userName
        FROM user
        where id = #{id}
    </select>

    <select id="queryUserInfo" parameterType="cn.drajun.mybatis.test.po.User" resultType="cn.drajun.mybatis.test.po.User">
        SELECT id, userId, userName, userHead
        FROM user
        where id = #{id} and userId = #{userId}
    </select>
</mapper>